<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:padding="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

    <TextView
        android:id="@+id/tvTitleSatu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Value Satu :"
        android:fontFamily="@font/dm_sans_bold"
        android:textSize="18sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tvValueSatu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:fontFamily="@font/dm_sans"
        android:textSize="18sp"
        android:layout_marginStart="5dp"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvTitleSatu"/>

    <TextView
        android:id="@+id/tvTitleDua"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Value Dua :"
        android:fontFamily="@font/dm_sans_bold"
        android:textSize="18sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/tvTitleSatu"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tvValueDua"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:fontFamily="@font/dm_sans"
        android:textSize="18sp"
        android:layout_marginStart="5dp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/tvValueSatu"
        app:layout_constraintStart_toEndOf="@+id/tvTitleDua"/>

    <TextView
        android:id="@+id/tvMetode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Metode"
        android:fontFamily="@font/dm_sans_bold"
        android:textSize="18sp"
        android:layout_marginStart="5dp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/tvValueSatu"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.divider.MaterialDivider
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:dividerColor="@color/black_third"
        app:layout_constraintTop_toBottomOf="@+id/tvValueDua"
        android:layout_marginVertical="5dp"/>

    <TextView
        android:id="@+id/tvTitleHasil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hasil :"
        android:fontFamily="@font/dm_sans_bold"
        android:textSize="18sp"
        android:layout_marginVertical="3dp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/divider"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tvHasil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:fontFamily="@font/dm_sans"
        android:textSize="18sp"
        android:layout_marginStart="5dp"
        android:layout_marginVertical="3dp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/divider"
        app:layout_constraintStart_toEndOf="@+id/tvTitleHasil"/>


</androidx.constraintlayout.widget.ConstraintLayout>